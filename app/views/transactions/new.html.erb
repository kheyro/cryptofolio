<div class="row">
  <div class="col">
    <h1>Add a transaction</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <% if @transaction.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
          <% @transaction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">

    <%= form_for [@current_user, @transaction] do |f| %>

      <div class="form-group">
        <%= f.label :trade_quantity %>
        <%= f.text_field :trade_quantity, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :trade_price %>
        <%= f.text_field :trade_price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :trade_date %>
        <%= f.date_field :trade_date, class: "form-control", value: Time.now.strftime("%Y-%m-%d") %>
      </div>

      <div class="form-group">
        <%= f.label :coin_id %>
        <%= f.select :coin_id, Coin.all.collect { |c| [ c.name.titleize, c.id ] }.sort, {include_blank: true}, {class: "form-control"} %>
      </div>

      <%= f.submit class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
